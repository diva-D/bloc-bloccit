<!DOCTYPE html>
<html lang="en">

<head>
    <% include ../static/partials/head.ejs %>
</head>

<body>
    <% include ../static/partials/navbar.ejs %>

    <main class="container">
        <h1><%= post.title %></h1>
        <a href="/topics/<%= post.topicId %>/posts/<%= post.id %>/edit" class="btn btn-warning">Edit</a>
        <form action="/topics/<%= post.topicId %>/posts/<%= post.id %>/destroy" method="post" style="display:initial">
            <button type="submit" class="btn btn-warning">Delete</button>
        </form>
        <p><%= post.body %></p>

        <section id="comment-form">
            <% if(currentUser) { %>
                <% include ../comments/new.ejs %>
            <% } %>
        </section>

        <section id="comment-list">
            <% if(post.comments) { %>
                <% post.comments.forEach((comment) => { %>
                    <%- include("../comments/show.ejs", {comment}) %>
                    <% }) %>
                <% } %>
        </section>
    </main>

    <% include ../static/partials/baseScripts.ejs %>

</body>

</html>